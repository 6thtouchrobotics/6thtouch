{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/*.jsx",
    "constants/Colors.js",
    "app/(tabs)/*.jsx",
    "app/settings/otp/*.jsx",
    "app/settings/*/*.jsx",
    "app/*/*.jsx",
    "app/*/*/*.jsx",
]
}
